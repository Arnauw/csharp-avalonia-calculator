<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="CalculatorGUI.MainWindow"
        Title="Calculator"
        Icon="/Assets/logo/logo.ico"
        Width="350" Height="350"
        MinWidth="300" MinHeight="300"
        CanResize="True">
    
    <Window.Styles>
        <Style Selector="Button">
            <Setter Property="HorizontalAlignment" Value="Stretch" />
            <Setter Property="VerticalAlignment" Value="Stretch" />
            <Setter Property="Margin" Value="5" />
            <Setter Property="HorizontalContentAlignment" Value="Center" />
            <Setter Property="VerticalContentAlignment" Value="Center" />
            <Setter Property="CornerRadius" Value="10" />
            <Setter Property="BorderBrush" Value="White" />
            <Setter Property="FontSize" Value="20" />
            <Setter Property="FontWeight" Value="Bold" />
        </Style>

        <!-- Testing classes -->
        <Style Selector="Button.testClass">
            <Setter Property="Background" Value="Aqua" />
        </Style>
    </Window.Styles>


    <StackPanel>
        <Grid RowDefinitions="*" ColumnDefinitions="*">
            <TextBlock HorizontalAlignment="Center">Calculator Title (will probably remove that)</TextBlock>
            <StackPanel Background="MediumSlateBlue">
                <TextBlock HorizontalAlignment="Center">Inputs: </TextBlock>
                <TextBlock HorizontalAlignment="Center">Results: </TextBlock>
            </StackPanel>
        </Grid>
        <Grid
            RowDefinitions="*, *, *, *, *"
            ColumnDefinitions="*, *, *, *"
            Background="BlueViolet">

            <!-- Col 0 -->
            <Button Grid.Row="0" Grid.Column="0" Classes="testClass" Content="C" />

            <Button Grid.Row="1" Grid.Column="0" Content="7" />

            <Button Grid.Row="2" Grid.Column="0" Content="4" />

            <Button Grid.Row="3" Grid.Column="0" Content="1" />

            <Button Grid.Row="4" Grid.Column="0" Grid.ColumnSpan="2" Content="0" />

            <!-- Col 1   -->

            <Button Grid.Row="0" Grid.Column="1" Content="AC" />

            <Button Grid.Row="1" Grid.Column="1" Content="8" />

            <Button Grid.Row="2" Grid.Column="1" Content="5" />

            <Button Grid.Row="3" Grid.Column="1" Content="2" />

            <!-- Col 2 -->

            <Button Grid.Row="0" Grid.Column="2" Content="%" />

            <Button Grid.Row="1" Grid.Column="2" Content="9" />

            <Button Grid.Row="2" Grid.Column="2" Content="6" />

            <Button Grid.Row="3" Grid.Column="2" Content="3" />

            <Button Grid.Row="4" Grid.Column="2" Content="." />

            <!-- Col 3 -->

            <Button Grid.Row="0" Grid.Column="3" Content="รท" />

            <Button Grid.Row="1" Grid.Column="3" Content="ร" />

            <Button Grid.Row="2" Grid.Column="3" Content="-" />

            <Button Grid.Row="3" Grid.Column="3" Content="+" />

            <Button Grid.Row="4" Grid.Column="3" Content="=" />

        </Grid>
    </StackPanel>
</Window>